@model List<Smartville.Models.State>
@{ 
    ViewBag.Title = "Estados";
}

<div class="row">
    <div class="col-md-12">
        <div class="panel">
            <div class="panel-heading">
                <h3 class="panel-title">Estados</h3>
            </div>
            <div class="panel-body">
                <div class="pad-btm form-inline">
                    <div class="row">
                        <div class="col-sm-6 table-toolbar-left">
                            @Html.ActionLink("Adicionar", "Create", "State", new { area = "Admin" }, new { @class = "btn btn-mint btn-labeled fa fa-plus" })
                            <button class="btn btn-default"><i class="fa fa-print"></i></button>
                        </div>
                    </div>
                </div>

                <div class="table-responsive">
                    <table id="demo-dt-basic" class="table table-striped" cellspacing="0">
                        <thead>
                            <tr>
                                <th>Id</th>
                                <th>Nome</th>
                                <th>Ação</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var state in Model)
                            {
                                <tr>
                                    <td>@state.Id</td>
                                    <td>@state.Name</td>
                                    <td>
                                        @Html.ActionLink("Alterar", "Edit", new { id = state.Id }, new { @class = "btn btn-primary btn-labeled fa fa-edit" })
                                        @Html.ActionLink("Apagar", "Delete", new { id = state.Id }, new { @class = "btn btn-danger btn-labeled fa fa-trash" })
                                    </td>
                                </tr>

                            }

                        </tbody>
                    </table>
                </div>

            </div>

        </div>
    </div>
</div>

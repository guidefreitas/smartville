@model Smartville.Models.Country
@{ 
    ViewBag.PageTitle = "Apagar cidade";
}
@using (Html.BeginForm())
{
    <div class="row">
        <div class="col-md-12">
            <div class="panel">
                <div class="panel-heading">
                    <h3 class="panel-title">País</h3>
                </div>

                <!--Horizontal Form-->
                <!--===================================================-->
                <form class="form-horizontal">
                    @Html.AntiForgeryToken()
                    <div class="panel-body">
                        <div class="form-group">
                            @Html.ValidationSummary()
                        </div>
                        <div class="form-group">
                            <p>Tem certeza que deseja apagar o estado @Model.Name?</p>
                        </div>
                    </div>
                    <div class="panel-footer text-right">
                        @Html.ActionLink("Cacelar", "Index", null, new { @class = "btn btn-default" })
                        <button type="submit" class="btn btn-danger">Apagar</button>
                    </div>
                </form>
                <!--===================================================-->
                <!--End Horizontal Form-->

            </div>
        </div>
    </div>


}
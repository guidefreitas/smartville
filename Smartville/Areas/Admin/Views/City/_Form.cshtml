@model Smartville.Areas.Admin.ViewModels.VMEditCreateCity

<div class="row">
    <div class="col-md-12">
        <div class="panel">
            <div class="panel-heading">
                <h3 class="panel-title">País</h3>
            </div>

            <!--Horizontal Form-->
            <!--===================================================-->
            <form class="form-horizontal">
                @Html.AntiForgeryToken()
                <div class="panel-body">
                    <div class="form-group">
                        @Html.ValidationSummary()
                    </div>
                    <div class="form-group">
                        @Html.LabelFor(m => m.Name, new { @class = "col-sm-3 control-label" })
                        @Html.TextBoxFor(m => m.Name, new { @class = "form-control" })
                        <span id="helpBlock2" class="help-block">
                            @Html.ValidationMessageFor(m => m.Name)
                        </span>
                    </div>

                    <div class="form-group">
                        @Html.LabelFor(m => m.StateId, new { @class = "col-sm-3 control-label" })
                        @Html.DropDownListFor(model => model.StateId, (Model.States)
                            .Select(option => new SelectListItem
                            {
                                Text = option.Name,
                                Value = option.Id.ToString(),
                                Selected = (Model != null) && (option.Id == Model.StateId)
                            }), "Escolha uma opção...", new { @class = "form-control" })

                        <span id="helpBlock2" class="help-block">
                            @Html.ValidationMessageFor(m => m.StateId)
                        </span>
                    </div>
                </div>
                <div class="panel-footer text-right">
                    @Html.ActionLink("Cancelar", "Index", null, new { @class = "btn btn-active-default"})
                    <button class="btn btn-info" type="submit">Salvar</button>
                </div>
            </form>
            <!--===================================================-->
            <!--End Horizontal Form-->

        </div>
    </div>
</div>